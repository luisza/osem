.row
  .col-md-12
    .page-header
      %h1
        %div{"data-placement" => "left", "data-toggle" => "tooltip", :title => @ticket.description}
          = @ticket.title
          Ticket
          %small
            = humanized_money_with_symbol @ticket.price
      %p.text-muted
        People who bought this ticket
.row
  .col-md-12
    %table.table.table-hover.datatable
      %thead
        %th #
        %th Name
        %th Quantity
        %th E-Mail
        %th Invoice
        %th Pay Method
        %th Paid
      %tbody
        - @ticket.buyers.each_with_index do |buyer, index|
          %tr
            %td
              = index + 1
            %td
              = buyer.name
            %td
              = buyer.ticket_purchases.where(ticket_id: @ticket.id).sum('quantity')
            %td
              = buyer.email
            %td
              %ol
                - buyer.payments.each do |pay|
                  %li
                    = link_to "Invoice", "/registro#{pay.attachment_url}", target: '_blank'
                    %br
            %td
              = buyer.ticket_purchases.first.paymethod
            %td
              = @ticket.tickets_paid(buyer)

